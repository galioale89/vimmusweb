<div style="width: 98%;padding-left: 2%;padding-top: 0.5%;">
    <div class='row'>
        <div style="width: 240px;">
            <div class="titulo-inicio">Assistência Técnica</div>
        </div>
        <div class="col">
            <a href="/gerenciamento/listaassistencia"><i style="font-size: 30px;" class='bi bi-printer'></i></a>
        </div>
    </div>
    {{#if lista}}
    <div class="row">
        {{#each lista}}
        <div class="mb-2" style="width: 300px; padding-left: 30px;">
            <div class="card"
                style="background-color: {{#if selecionado}} rgba(46, 255, 102, 0.6)  {{else}} rgba(255, 255, 67, 0.6) {{/if}}">
                <div class="card-body text-start">
                    <div class="row">
                        <label style="font-size: 12px;line-height: 16px;font-weight: 600;">{{descricao}}</label><br>
                        <label style="font-size: 12px;line-height: 16px;">{{data}}</label><br>
                        <label style="font-size: 12px;line-height: 16px;">{{cidade}}/{{uf}}</label>
                        <label style="font-size: 12px;line-height: 16px;">{{endereco}}, {{numero}}</label>
                        <label style="font-size: 12px;line-height: 16px;">Complemento: {{complemento}}</label><br>
                    </div>
                    <div class="mt-1">
                        <div class="btn-group dropup">
                            <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <i class='bi bi-eye'></i>
                            </button>
                            <ul class="dropdown-menu">
                                <textarea class="form-control form-control-sm" id="" cols="20" rows="4">{{observacao}}</textarea>
                            </ul>
                        </div>
                        {{#if selecionado}}
                        <a href="/gerenciamento/seltarefa/{{id}}" class="btn btn-sm btn-warning">Parar</a>
                        {{else}}
                        <a href="/gerenciamento/seltarefa/{{id}}" class="btn btn-sm btn-primary">Iniciar</a>
                        {{/if}}
                            <a href="/gerenciamento/mostrarFotos/assistencia@{{id}}" class="btn btn-sm btn-primary">Registrar</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="card">
        <div class="card-body">
            <label style="font-size: 50px;padding: 150px;">Nenhuma tarefa de assistência cadastrada</label>
        </div>
    </div>
    {{/if}}
</div>