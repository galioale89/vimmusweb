    <form action="/parametros/salvar/" method="post">
        <input type='hidden' name="tipo" value="solar">
        <div class="row mt-4">
            <div class="col">
                <label class='titulo-beneficio fw-bold'>Descrição</label><br>
                <input class="form-control" name="descricao">
            </div>
            <div class="col">
                <label class='titulo-beneficio fw-bold'>Tipo do Campo</label><br>
                <select class="form-select" name="opcao">
                    <option value="lista">Lista</option>
                    <option value="texto">Texto</option>
                </select>
            </div>
            <div class="col">
                <label class='titulo-beneficio fw-bold'>Valor</label><br>
                <input class="form-control" name="valor">
            </div>
            <div class="col">
                <button type="submit" class="btn"><i class='bi bi-plus d-flex align-items-center'
                        style="font-size: 40px;margin-top: 20px;"></i></button>
            </div>
        </div>
    </form>
    {{#if params}}
    <div class="card mt-4" style="margin-bottom: 40px;">
        <div class="card-body">
            <label class='titulo-inicio' style="cursor: none;font-size: 30px;">Parâmetros</label>
            <table>
                <tr>
                    <td class="col">
                        <label class='col-form-label fw-bold'>Descrição</label><br>
                    </td>
                    <td class="col">
                        <label class='col-form-label fw-bold'>Tipo do Campo</label><br>
                    </td>
                    <td class="col">
                        <label class='col-form-label fw-bold'>Valor</label><br>
                    </td>
                </tr>
                {{#each params}}
                <tr>
                    <td class="col">
                        <label class='titulo-beneficio'>{{descricao}}</label>
                    </td>
                    <td class="col">
                        <label class='titulo-beneficio'>{{opcao}}</label>
                    </td>
                    <td class="col">
                        <label class='titulo-beneficio'>{{valor}}</label>
                    </td>
                    <td class="col">
                        <a href="/parametros/deletar/{{_id}}"><i class='bi bi-x-circle'
                                style="color: orangered;font-size: 24px;"></i></a>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
