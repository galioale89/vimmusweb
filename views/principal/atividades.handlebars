<div style="width: 98%;padding-left: 2%;padding-top: 0.5%;">
    {{#if atva}}
    <h1>Aterramento</h1>
    <form action="/gerenciamento/salvarImagem" method="post" enctype="multipart/form-data">
        <input type="hidden" name="ida" value='{{atva._id}}'>
        <input type="hidden" name="id" value='{{proposta._id}}{{tarefa._id}}'>
        <input type='hidden' name='caminho' value='aterramento'>
