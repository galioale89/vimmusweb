<style>
    .disabledbutton {
        pointer-events: none;
        opacity: 0.4;
    }

    .picture-canvas {
        display: none;
    }
</style>

<script>
    window.onload = function () {

        var bloquear = document.getElementById('bloquear')

        if (bloquear.className == 'true') {
            bloquear.className = 'disabledbutton'
        }
    }
</script>
<div class='text-center mt-2' style="width: 98%;padding-left: 2%;padding-top: 0.5%;height: auto">
    <div class="row">
        <div class="col text-center">
<label style="font-size: 30px;padding: 30px;" class='titulo-inicio fw-bold' >{{tarefas.descricao}}</label>
        </div>
        <div class="col-md-1">
            <a href="/gerenciamento/instalacao/{{idprj}}">X</a>
        </div>
    </div>
    
    <div class="row">
        {{#each lista}}
        <div class="col-md-4">
            <div class="row">
                <div style="width: 1px;">
                    {{#if ../projeto.encerrado}}
                    {{else}}
                    <a href='/gerenciamento/deletaImagem/{{imagem}}delimg{{id}}delimgtarefa{{gestao}}'
                        class='botao-filter'><i class='bi bi-x-circle' style="font-size: 20px;color: orangered"></i></a>
                    {{/if}}
                </div>
                <div class="col">
                    <a href='/gerenciamento/mostrarBucket/{{imagem}}' target="_blank"
                        title="Clique para fazer o download" style="font-size: 25px;">
                        <img src='/gerenciamento/mostrarBucket/{{imagem}}' style="width: 80%;" alt='Minha Figura'></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>