                <table>
                    <tr>
                        <th style="width: 40%;text-align: center;" >Nome</th>
                        <th style="width: 20%;text-align: center;">Data Inicio</th>
                        <th style="width: 20%;text-align: center;">Data Fim</th>
                        <th style="text-align: center;">Foi Realizado?</th>
                    </tr>
                    {{#each prjven}}
                    <tr style="text-align: center;">
                        <td><a href='/projeto/edicao/{{_id}}' class='selecao'>{{nome}}</a></td>
                        <td>{{dataini}}</td>
                        <td>{{datafim}}</td>
                        {{#if foiRealizado}}
                        <td>Sim</td>
                        {{else}}
                        <td>Não</td>
                        {{/if}}
                    </tr>
                    {{else}}
                    {{/each}}
                    <tr>
                        <td colspan="5" style="background: rgba(98, 75, 230, 0.2);font-weight: bold;">Total: {{qtdven}}
